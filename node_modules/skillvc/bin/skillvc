      "intent": "GetWeeksHigh"
    },
    {
      "slots": [
        {
          "name": "SinceDate",
          "type": "AMAZON.DATE"
        }
      ],
      "intent": "GetStockSinceDate"
    },
    {
      "intent": "AMAZON.HelpIntent"
    },
    
    {
      "intent": "AMAZON.StopIntent"
    },
    {
      "intent": "AMAZON.CancelIntent"
    }
  ]
}
